{
  "deploymentType": "nodejs",
  "name": "GCash Backend",
  "description": "Money transfer application backend API",
  "ports": [
    {
      "port": 5002,
      "protocol": "http"
    }
  ],
  "buildCommand": "cd backend && npm install --omit=dev",
  "startCommand": "cd backend && npm start",
  "environment": {
    "NODE_ENV": "production",
    "PORT": "5002",
    "DB_HOST": "${DB_HOST}",
    "DB_PORT": "${DB_PORT}",
    "DB_USER": "${DB_USER}",
    "DB_PASSWORD": "${DB_PASSWORD}",
    "DB_NAME": "${DB_NAME}",
    "JWT_SECRET": "${JWT_SECRET}",
    "FRONTEND_URL": "${FRONTEND_URL}"
  },
  "rootDirectory": "./backend",
  "healthCheck": {
    "enabled": true,
    "path": "/api/health"
  }
}
